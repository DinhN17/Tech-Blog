<div class="col mb-4 post">
  <div class="flex-row post">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.created_at}}</p>
  </div>
  <div class="col-mb-4">
    <p>
      {{post.content}}
    </p>
  </div>
</div>

<!-- Loop over each object in the posts array -->
{{#each post.comments as |comment| }}
{{> comment-details}}
{{/each}}

<div class="col mb-3 comment">
    <div class="comment">
        <h2></h2>
    </div>
    <form class="form comment-form">
        <div class="form-group">
            <label for="comment">Comment:</label>
            <textarea data-post-id="{{post.id}}" name="comment" id="comment-input" class="form-group form-textarea"></textarea>
        </div>
        <div class="flex-column justtify-content-center">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>
<script src="../js/commentSubmit.js"></script>
<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="col mb-4 post">
  <div class="flex-row post">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{#if logged_in}}
      <a href="api/posts/{{post.id}}">{{post.title}}</a>
      {{else}}
      <a href="/login">{{post.title}}</a>
      {{/if}}
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.created_at}}</p>
  </div>
  <div class="col-mb-4">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
